<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    android:layout_margin="3dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/eachBranchCardImage"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="right"

        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eachBranchCardHeading"
            app:customTypeface="headingBold"
            android:textColor="@color/colorPrimary"
            tools:ignore="MissingPrefix"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/eachBranchCardDayLinear"
            android:layout_below="@id/eachBranchCardHeading"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Days: "
                android:textSize="@dimen/eachBranchEachCourseTextSize"
                android:textColor="@color/colorSecondaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eachBranchCardDay"
            android:textAllCaps="true"
            android:textSize="@dimen/eachBranchEachCourseTextSize"
            android:gravity="bottom|left"
            app:customTypeface="subHeadingBold"
            tools:ignore="MissingPrefix"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eachBranchCardTimeLinear"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="3dp"
            android:layout_below="@id/eachBranchCardDayLinear"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active hours: "
                android:textSize="@dimen/eachBranchEachCourseTextSize"
                android:textColor="@color/colorSecondaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eachBranchCardTime"
            android:textSize="@dimen/eachBranchEachCourseTextSize"
            app:customTypeface="subHeadingBold"
            tools:ignore="MissingPrefix"
            android:gravity="bottom|right"

            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_below="@id/eachBranchCardTimeLinear">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/eachBranchEachCourseTextSize"
                android:text="Course Fee: "
                android:textColor="@color/colorSecondaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customTypeface="subHeadingBold"
            android:textSize="@dimen/eachBranchEachCourseTextSize"
            tools:ignore="MissingPrefix"
            android:id="@+id/eachBranchCardCost"
            />
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>