<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            app:customTypeface="subHeadingBold"
            tools:ignore="MissingPrefix"
            android:textSize="17dp"
            android:textColor="@color/text2"
            android:id="@+id/home_card_back_address"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="70"
            android:gravity="center"
            android:id="@+id/home_back_day_layout">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/days_size"
                android:layout_weight="10"
                android:id="@+id/home_back_sunday"
                android:src="@drawable/sunday_red"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/days_size"
                android:layout_weight="10"
                android:id="@+id/home_back_monday"
                android:src="@drawable/monday_red"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/days_size"
                android:layout_weight="10"
                android:id="@+id/home_back_tuesday"
                android:src="@drawable/tuesday_red"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/days_size"
                android:layout_weight="10"
                android:id="@+id/home_back_wednesday"
                android:src="@drawable/wednesday_red"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/days_size"
                android:layout_weight="10"
                android:id="@+id/home_back_thursday"
                android:src="@drawable/thursday_red"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/days_size"
                android:layout_weight="10"
                android:id="@+id/home_back_friday"
                android:src="@drawable/friday_red"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/days_size"
                android:layout_weight="10"
                android:id="@+id/home_back_saturday"
                android:src="@drawable/saturday_red"/>

        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:weightSum="100">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="40"
        app:customTypeface="headingBold"
        android:textSize="20dp"
        tools:ignore="MissingPrefix"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorSecondaryDark"
        android:gravity="center_horizontal|center_vertical"
        android:text="Active Hours"/>

<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="25"
    android:layout_marginStart="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    >

        <rm.com.clocks.ClockImageView
            android:id="@+id/clock1"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            app:hours="16"

            app:minutes="20"
            app:timeSetDuration="400"
            app:hasFrame="true"


            app:indeterminateSpeed="2"
            app:pointerWidth="regular"

            app:frameWidth="regular"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        app:customTypeface="subHeadingBold"
        android:layout_alignParentBottom="true"
        android:textSize="15dp"
        tools:ignore="MissingPrefix"
        android:layout_centerHorizontal="true"
        android:id="@+id/home_card_clock1_text"

        android:textColor="@color/colorSecondaryDark"
       />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:layout_marginTop="10dp"
        >

        <rm.com.clocks.ClockImageView
            android:id="@+id/clock2"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            app:hours="16"
            app:minutes="20"
            app:timeSetDuration="400"

            app:indeterminateSpeed="3"
            app:pointerWidth="regular"
            app:frameWidth="regular"
            app:hasFrame="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:customTypeface="subHeadingBold"
            android:textSize="15dp"
            android:layout_alignParentBottom="true"
            tools:ignore="MissingPrefix"

            android:layout_centerHorizontal="true"
            android:id="@+id/home_card_clock2_text"

            android:textColor="@color/colorSecondaryDark"
           />
</RelativeLayout>
</LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>