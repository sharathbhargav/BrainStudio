<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_legal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="brainstudio.s4pl.com.brainstudio.legal">
    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/legal_appbar"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/legal_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            />

    </android.support.design.widget.AppBarLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Licenses"
        android:layout_weight="7"
        android:textSize="25dp"/>
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:id="@+id/legalRecycler"
    android:layout_weight="80">

</android.support.v7.widget.RecyclerView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:text="Icon credits: icons8.com"
        android:layout_weight="5"
        android:textSize="15dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Contact developers"
        android:textColor="@color/colorPrimary"
        android:layout_weight="5"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColorLink="#0000ff"
        android:id="@+id/legalDev"/>
</LinearLayout>
