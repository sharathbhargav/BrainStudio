<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.CommonFragment">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            >
            <TextView
                android:layout_margin="10dp"
                android:gravity="center"
                android:id="@+id/eachProgramHeading"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="40dp"
                app:customTypeface="headingBold"
                tools:ignore="MissingPrefix"
                android:focusable="true"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:customTypeface="subHeadingBold"
                tools:ignore="MissingPrefix"
                android:id="@+id/eachProgramInfo"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eachProgramBenifits"
                app:customTypeface="subHeadingBold"
                tools:ignore="MissingPrefix"
                android:layout_margin="10dp"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:overScrollMode="never"
                android:id="@+id/eachProgramGridRecycler">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
